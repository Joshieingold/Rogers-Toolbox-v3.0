<Window x:Class="Rogers_Toolbox_v3._0.ResultsWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Results" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Passed" FontSize="16" FontWeight="Bold" Margin="10"/>
            <ListBox x:Name="PassedListBox" Margin="10" Height="100"/>

            <TextBlock Text="Failed" FontSize="16" FontWeight="Bold" Margin="10"/>
            <ListBox x:Name="FailedListBox" Margin="10" Height="100" SelectionChanged="FailedListBox_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Window>