<Window x:Class="Rogers_Toolbox_v3._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rogers_Toolbox_v3._0"
        mc:Ignorable="d"
        Title="Rogers Toolbox v3.0" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <!-- Define a Style for Buttons -->
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="Black" />
                <Setter Property="Cursor" Value="Arrow" />
                <Setter Property="FontFamily" Value="Mongolian Baiti" />
                <!-- Disable the focus visual style -->
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Style.Triggers>
                    <!-- Change Foreground color to Red on Hover -->
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="Red" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <Rectangle x:Name="navBar" Height="56" Stroke="#FF282828" VerticalAlignment="Top" Fill="#FF282828"/>
        <Button Content="Import" HorizontalAlignment="Left" Height="50" Margin="3,3,0,0" VerticalAlignment="Top" Width="50" Click="Button_Click" Foreground="{x:Null}" BorderBrush="{x:Null}" >
            <Button.Background>
                <ImageBrush ImageSource="/button_6.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button Content="WMS" HorizontalAlignment="Left" Height="50" Margin="58,3,0,0" VerticalAlignment="Top" Width="50" Click="Button_Click" Foreground="{x:Null}" BorderBrush="{x:Null}" >
            <Button.Background>
                <ImageBrush ImageSource="/button_7.png"/>
            </Button.Background>
        </Button>
        <Button Content="Flexi" HorizontalAlignment="Left" Height="50" Margin="113,3,0,0" VerticalAlignment="Top" Width="50" Click="Button_Click" Foreground="{x:Null}" BorderBrush="{x:Null}" >
            <Button.Background>
                <ImageBrush ImageSource="/button_8.png" Stretch="None"/>
            </Button.Background>
        </Button>
        <Button Content="Blitz" x:Name="BlitzButton" HorizontalAlignment="Left" Height="50" Margin="168,3,0,0" VerticalAlignment="Top" Width="50" Click="Button_Click" Foreground="{x:Null}" BorderBrush="{x:Null}" >
            <Button.Background>
                <ImageBrush ImageSource="/button_9.png" Stretch="None" TileMode="None"/>
            </Button.Background>
        </Button>
        <Button Content="CTR" HorizontalAlignment="Left" Height="50" Margin="223,3,0,0" VerticalAlignment="Top" Width="50" Click="Button_Click" Foreground="{x:Null}" BorderBrush="{x:Null}" >
            <Button.Background>
                <ImageBrush ImageSource="/button_2.png" Stretch="None"/>
            </Button.Background>
        </Button>
        <RadioButton Content="Bom-Wip" HorizontalAlignment="Right" Margin="0,21,33,0" Width="69" Foreground="White" Height="14" VerticalAlignment="Top"/>
        <Label x:Name="InfoBox" Content="Welcome to The Rogers Toolbox v3.0" HorizontalAlignment="Center" Height="20" Margin="0,75,0,0" VerticalAlignment="Top" Width="500" Foreground="White" FontSize="9" FontFamily="Sitka Text" Background="#FF282828" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <TextBox x:Name="TextBox" Margin="58,112,58,30" TextWrapping="Wrap" Text="" Background="#FF3D3D3D" Foreground="White" AcceptsReturn="True"/>
    </Grid>
</Window>
