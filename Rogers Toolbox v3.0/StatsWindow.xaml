<Window x:Class="Rogers_Toolbox_v3._0.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="StatsWindow" Height="450" Width="800">
    <Grid Background="#FF1E1E1E">
        <!-- Pie Chart -->
        <lvc:PieChart x:Name="TotalPieChart" Margin="10,84,548,122" InnerRadius="70">
            <!-- SeriesCollection will be populated dynamically from code -->
        </lvc:PieChart>

        <!-- Labels -->
        <Label Content="Statistics" HorizontalAlignment="Center" Height="68" VerticalAlignment="Top" Width="194" Foreground="White" FontSize="48" Margin="0,-13,0,0"/>
        <Label Content="Total" HorizontalAlignment="Left" Margin="98,37,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Foreground="White"/>
    </Grid>
</Window>
